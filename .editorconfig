# EditorConfig configuration
# Ensures consistent coding styles across different editors

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript files  
[*.{js,ts,jsx,tsx}]
indent_size = 2
max_line_length = 80

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Configuration files
[*.{ini,cfg}]
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# HTML files
[*.html]
indent_size = 2

# CSS files
[*.css]
indent_size = 2