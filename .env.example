# Environment variables template
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ai_server
REDIS_URL=redis://localhost:6379/0

# API Keys (replace with actual keys)
OPENAI_API_KEY=your-openai-api-key-here
HUGGINGFACE_TOKEN=your-huggingface-token-here

# System Configuration
LOG_LEVEL=INFO
DEBUG_MODE=false
SECRET_KEY=change-this-secret-key-in-production

# Server Ports
MEMORY_SERVER_PORT=8001
LLM_SERVER_PORT=8002
GUI_SERVER_PORT=8003
ATLAS_SERVER_PORT=8004

# Model Configuration
MODELS_PATH=./models
DEFAULT_PROFILE=GENERAL
GPU_ENABLED=true
MAX_GPU_MEMORY_GB=8

# Messaging Configuration
PULSAR_URL=pulsar://localhost:6650
NATS_URL=nats://localhost:4222
BENTHOS_API_PORT=4195

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ENABLE_METRICS=true

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-here
SESSION_TIMEOUT_MINUTES=60
RATE_LIMIT_PER_MINUTE=60

# ATLAS Configuration (Public Interface Only)
ATLAS_ENABLED=true
ATLAS_ENDPOINT=http://localhost:8004/atlas/v1
ATLAS_TIMEOUT_SECONDS=30
ATLAS_RATE_LIMIT=100

# Storage Configuration
S3_BUCKET_NAME=ai-server-storage
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=us-east-1

# Development Configuration
RELOAD_ON_CHANGE=true
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8003

# Python Path Configuration
PYTHONPATH=/Users/server/Code/AI-projects/AI-server

# Node.js Environment Configuration
NODE_ENV=development
NODE_OPTIONS="--max-old-space-size=4096 --enable-source-maps"
NPM_CONFIG_FUND=false
NPM_CONFIG_AUDIT=false